- provide(:title, @user&.name)

h1.page-header 
  = @user&.name

h3 Registration information (Identity)

- if @user
  .table-responsive
    table.table.borderd
      thead
        tr
          th id
          th first_name
          th last_name
          th email
          th type
          th backend_user_id
          th user_id
      tbody
        tr
          td = @user.identity.id
          td = @user.identity.first_name
          td = @user.identity.last_name
          td = @user.identity.email
          td = @user.identity.backend_user_type&.underscore&.humanize || "General user"
          td = @user.identity.backend_user_id || "N/A"
          td = @user.identity.user_id
- else
  p @user is not defined...
