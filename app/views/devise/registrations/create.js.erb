// http://guides.rubyonrails.org/layouts_and_rendering.html#rendering-collections

// After unsuccessful signup, re-render the form with error messages.
<% if resource.errors.messages.count > 0 %>
  $('#signup_modal__target').html(
    '<%= j(render "static_pages/signup_modal") %>'
  );
// After successful signup, close the modal.
<% else %>
  $('#signup_modal__target .close').click();
  $('#flash_message').html(
    '<%= j(render "layouts/flash_message") %>'
  );
<% end %>
